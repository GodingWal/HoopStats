# Hoop-Stats Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (optional - app works with in-memory storage if not set)
# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/hoopstats

# API Keys (optional)
# BallDontLie API key for enhanced player data sync
# BALLDONTLIE_API_KEY=your_api_key_here

# The Odds API key for real betting odds (get free key at https://the-odds-api.com)
# Free tier: 500 requests/month
# THE_ODDS_API_KEY=your_api_key_here

# ============================================
# ScraperAPI Configuration (for PrizePicks)
# ============================================
# Get your API key at https://www.scraperapi.com
# Free tier: 5,000 API credits/month
# SCRAPER_API_KEY=your_api_key_here

# Enable premium residential proxies (requires paid plan)
# Premium proxies are more expensive but much less likely to be blocked
# Set to "true" to enable (default: false)
# SCRAPER_API_PREMIUM=false

# Enable JavaScript rendering for Cloudflare challenges
# Uses more API credits but can bypass JavaScript-based bot detection
# Set to "true" to enable (default: false)
# SCRAPER_API_RENDER=false

# ============================================
# Server Configuration
# ============================================
# Port to run the server on (default: 5000)
# PORT=5000

# Node Environment
# NODE_ENV=development

